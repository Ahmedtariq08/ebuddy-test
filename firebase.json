{
    "emulators": {
        "auth": {
            "port": 9099
        },
        "firestore": {
            "port": 8080
        },
        "ui": {
            "enabled": true
        },
        "singleProjectMode": true,
        "functions": {
            "port": 5001
        }
    },
    "functions": {
        "source": "backend",
        "codebase": "backend",
        "runtime": "nodejs20",
        "ignore": [
            "node_modules",
            ".git",
            "firebase-debug.log",
            "firebase-debug.*.log",
            "*.local"
        ],
        "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"]
    }
}
